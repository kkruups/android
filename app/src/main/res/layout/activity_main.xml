<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="#78c2ff"
    android:background="#92eeff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_1"
        android:id="@+id/toggleButton1"
        android:gravity="center|center_vertical"
        android:height="75dp"
        android:minWidth="250dp"
        android:layout_above="@+id/toggleButton2"
        android:layout_alignLeft="@+id/toggleButton2"
        android:clickable="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_2"
        android:id="@+id/toggleButton2"
        android:layout_above="@+id/toggleButton3"
        android:layout_alignLeft="@+id/toggleButton3"
        android:gravity="center"
        android:height="75dp"
        android:minWidth="250dp"
        android:clickable="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_3"
        android:id="@+id/toggleButton3"
        android:gravity="center"
        android:height="75dp"
        android:minWidth="250dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/toggleButton4"
        android:clickable="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_4"
        android:id="@+id/toggleButton4"
        android:gravity="center"
        android:height="75dp"
        android:minWidth="250dp"
        android:layout_below="@+id/toggleButton3"
        android:layout_alignLeft="@+id/toggleButton5"
        android:clickable="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_5"
        android:id="@+id/toggleButton5"
        android:layout_below="@+id/toggleButton4"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:height="75dp"
        android:minWidth="250dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My App Portfolio"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#734bff" />

</RelativeLayout>
